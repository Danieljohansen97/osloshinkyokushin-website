  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attatch to Vitest",
      "port": 9229,
      "address": "localhost",
      "request": "attach",
      "type": "node",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 1
      }
    },
    {
      "name": "Watch-testing (external terminal)",
      "request": "launch",
      "runtimeArgs": ["run-script", "test"],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}\\node_modules\\**\\*.js",
        "<node_internals>/**/*.js",
        "<node_internals>\\**\\*.js"
      ],
      "type": "node",
      "console": "externalTerminal",
      "presentation": {
        "hidden": true,
        "group": "launch",
        "order": 3
      }
    },
    {
      "name": "Watch-testing",
      "request": "launch",
      "runtimeArgs": ["run-script", "test"],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}\\node_modules\\**\\*.js",
        "<node_internals>/**/*.js",
        "<node_internals>\\**\\*.js"
      ],
      "type": "node",
      "presentation": {
        "hidden": false,
        "group": "launch",
        "order": 2
      }
    },
    {
      "name": "Start Development server",
      "request": "launch",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}\\node_modules\\**\\*.js",
        "<node_internals>/**/*.js",
        "<node_internals>\\**\\*.js"
      ],
      "type": "node",
      "presentation": {
        "hidden": false,
        "group": "launch",
        "order": 2
      }
    }
  ],
  "compounds": [
    {
      "name": "Dev: Test & Watch",
      "configurations": ["Start Development server", "Watch-testing"],
      "presentation": {
        "hidden": false,
        "group": "launch",
        "order": 1
      }
    }
  ]
}
